@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

body {
  background: #000;
  font-size: 18px;
  line-height: 1.2;
}

.visuallyhidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
}

.bespoke-progress-parent {
  z-index: 5;
}

.bespoke-progress-bar {
  background: #79b000;
}

.bespoke-slide {
  padding: 30px;
  background: #fff;
  color: #000;
  box-sizing: border-box;
  text-align: center;
}

.bg-img {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: bottom center;
  color: #fff;
  text-shadow: 0 1px 5px rgba(0,0,0,1);
}

p {
  margin: 0.5em 0;
}

a {
  color: #79b000;

  &:hover {
    color: #92d400;
  }
}

h1 {
  font-size: 3em;
}

h2 {
  width: 90%;
}

li {
  text-align: left;
  margin-top: 7px;
}

.plus-list li {
  list-style: none;
  position: relative;

  &:before {
    content: "+";
    position: absolute;
    left: -20px;
  }

  &:first-child:before {
    content: "";
  }
}

.small {
  margin: 0 0 12px;
  font-size: 12px;
}

pre.bullet {
  width: 100%;
}

.small-code {
  font-size: 15px;
}

.middleman {
  background: transparent url('../images/middleman.jpeg') no-repeat 0 0;
  margin-right: 20px;
}

.grunt {
  background: transparent url('../images/grunt.png') no-repeat 0 0;
}

.middleman,
.grunt {
  display: inline-block;
  height: 120px;
  width: 120px;
  background-size: 120px 120px;
  overflow: hidden;
  text-align: left;
  text-indent: -500px;
  vertical-align: middle;
  margin-top: 20px
}

.plus {
  display: inline-block;
  font-size: 36px;
  vertical-align: middle;
}

.npm {
  width: 50%;
  display: inline-block;
  margin-top: 30px;
}

code {
  background: #272822;
  color: #f8f8f2;

  &.wrap {
    white-space: normal;
  }
}
